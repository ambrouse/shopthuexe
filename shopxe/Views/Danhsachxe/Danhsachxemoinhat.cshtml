@model IEnumerable<shopxe.Models.sanpham>
@{
    ViewBag.Title = "Danhsachxemoinhat";
    Layout = "~/Views/layout/layout.cshtml";
}
@section css{
    <link rel="stylesheet" href="~/accect/css/cssreset.css"/>
    <link rel="stylesheet" href="~/accect/css/cardsanpham.css"/>
    }
<div class="card">
    @foreach (var i in Model) { 
        <div class="card__item">
            <div class="img">
                <img src="@i.imgurl_1" alt="">
            </div>
            <div class="name">
                <p>@i.ten</p>
                <a href="~/Chitiet/?id=@i.id"></a>
            </div>
            <div class="gia">
                <p>@i.loai1.ten</p>
            </div>
            <div class="gia">
                <p>@i.hang1.ten</p>
            </div>
        </div>
}
</div>
